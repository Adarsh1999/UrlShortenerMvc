@model UrlShortenerMvc.ViewModels.CreateUrlViewModel

@{
    ViewData["Title"] = "Create Short URL";
}

<div class="container d-flex flex-column align-items-center justify-content-center" style="min-height: 80vh;">
    <div class="col-md-7 col-lg-6">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-white border-0 pb-0">
                <h2 class="display-6 fw-bold text-center mb-0">Create Short URL</h2>
            </div>
            <div class="card-body p-4">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-4">
                        <label asp-for="Url" class="form-label">Enter URL to shorten</label>
                        <div class="input-group">
                            <input asp-for="Url" class="form-control form-control-lg" placeholder="https://example.com/very/long/url" />
                        </div>
                        <span asp-validation-for="Url" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="ExpiresAt" class="form-label">Expiry Date (Optional)</label>
                        <div class="input-group">
                            <input asp-for="ExpiresAt" class="form-control" type="datetime-local" />
                        </div>
                        <span asp-validation-for="ExpiresAt" class="text-danger"></span>
                    </div>

                    <div class="d-grid mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-link me-2"></i>Shorten URL
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/4ad8d6e2b2.js" crossorigin="anonymous"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 