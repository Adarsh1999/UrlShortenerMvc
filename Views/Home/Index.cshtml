@{
    ViewData["Title"] = "URL Shortener";
}

<div class="container-fluid px-0" style="min-height: 80vh;">
    <div class="row g-0 align-items-center justify-content-center" style="min-height: 80vh;">
        <div class="col-12">
            <div class="text-center mb-5 px-3">
                <!-- Hero Icon -->
                <div class="mb-4" style="animation: float 3s ease-in-out infinite;">
                    <div class="d-inline-block position-relative">
                        <svg width="100" height="100" viewBox="0 0 100 100" style="filter: drop-shadow(0 15px 35px rgba(0,0,0,0.3));">
                            <defs>
                                <linearGradient id="linkGradient" x1="0%" y1="0%" x2="100%" y2="100%">
                                    <stop offset="0%" style="stop-color:#ffffff;stop-opacity:1" />
                                    <stop offset="100%" style="stop-color:#f0f0f0;stop-opacity:0.9" />
                                </linearGradient>
                            </defs>
                            <circle cx="30" cy="30" r="12" fill="url(#linkGradient)" opacity="0.9"/>
                            <circle cx="70" cy="70" r="12" fill="url(#linkGradient)" opacity="0.9"/>
                            <line x1="38" y1="38" x2="62" y2="62" stroke="url(#linkGradient)" stroke-width="8" stroke-linecap="round"/>
                        </svg>
                    </div>
                </div>
                
                <!-- Hero Title -->
                <h1 class="display-3 fw-bold mb-4" style="color: white; text-shadow: 0 4px 30px rgba(0,0,0,0.3); letter-spacing: -0.5px;">
                    URL Shortener
                </h1>
                <p class="lead mb-3" style="color: rgba(255,255,255,0.95); font-size: 1.5rem; font-weight: 500;">
                    Make your links short, simple, and trackable.
                </p>
                <p class="mb-5" style="color: rgba(255,255,255,0.85); font-size: 1.15rem; max-width: 650px; margin-left: auto; margin-right: auto;">
                    Easily create short links with expiration and click analytics. Perfect for sharing and tracking your URLs.
                </p>
                
                <!-- CTA Button -->
                <a href="/ShortUrls/Create" class="btn btn-light btn-lg px-5 py-3 mb-5" style="font-weight: 700; font-size: 1.1rem; border-radius: 50px; box-shadow: 0 10px 40px rgba(0,0,0,0.3); background: white; color: #6366f1; border: none; transition: all 0.3s ease;">
                    <i class="fas fa-compress-alt me-2"></i>Create Short URL
                </a>
            </div>
            
            <!-- How It Works Section -->
            <div class="row justify-content-center px-3">
                <div class="col-lg-8 col-xl-7">
                    <div class="card shadow-lg border-0" style="border-radius: 24px; overflow: hidden;">
                        <div class="card-body p-5">
                            <h5 class="text-center mb-5" style="font-size: 1.75rem; font-weight: 700; background: var(--primary-gradient); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">
                                How it works
                            </h5>
                            <div class="row g-4">
                                <div class="col-md-4">
                                    <div class="text-center">
                                        <div class="mb-3">
                                            <div class="d-inline-flex align-items-center justify-content-center" style="width: 70px; height: 70px; border-radius: 50%; background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%); box-shadow: 0 8px 20px rgba(99, 102, 241, 0.4);">
                                                <i class="fas fa-paste fa-2x text-white"></i>
                                            </div>
                                        </div>
                                        <h6 class="fw-bold mb-2" style="color: #1e293b;">Paste your long URL</h6>
                                        <p class="text-muted small mb-0">Enter any URL you want to shorten</p>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="text-center">
                                        <div class="mb-3">
                                            <div class="d-inline-flex align-items-center justify-content-center" style="width: 70px; height: 70px; border-radius: 50%; background: linear-gradient(135deg, #8b5cf6 0%, #d946ef 100%); box-shadow: 0 8px 20px rgba(139, 92, 246, 0.4);">
                                                <i class="fas fa-bolt fa-2x text-white"></i>
                                            </div>
                                        </div>
                                        <h6 class="fw-bold mb-2" style="color: #1e293b;">Get short link instantly</h6>
                                        <p class="text-muted small mb-0">Automatic generation in seconds</p>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="text-center">
                                        <div class="mb-3">
                                            <div class="d-inline-flex align-items-center justify-content-center" style="width: 70px; height: 70px; border-radius: 50%; background: linear-gradient(135deg, #d946ef 0%, #ec4899 100%); box-shadow: 0 8px 20px rgba(236, 72, 153, 0.4);">
                                                <i class="fas fa-chart-line fa-2x text-white"></i>
                                            </div>
                                        </div>
                                        <h6 class="fw-bold mb-2" style="color: #1e293b;">Track performance</h6>
                                        <p class="text-muted small mb-0">Monitor clicks and analytics</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-light:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 50px rgba(0,0,0,0.4) !important;
    }
    
    @@keyframes float {
        0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(-15px); }
    }
</style>

<script src="https://kit.fontawesome.com/4ad8d6e2b2.js" crossorigin="anonymous"></script>
