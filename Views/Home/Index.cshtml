@{
    ViewData["Title"] = "URL Shortener";
}

<div class="container py-5 d-flex flex-column align-items-center justify-content-center" style="min-height: 70vh;">
    <div class="text-center mb-4">
        <img src="https://img.icons8.com/fluency/96/link.png" alt="Short Link Icon" style="width:96px;height:96px;"/>
        <h1 class="display-4 fw-bold mt-3">URL Shortener</h1>
        <p class="lead">Make your links short, simple, and trackable.</p>
        <p class="text-muted mb-4">Easily create short links with expiration and click analytics. Perfect for sharing and tracking your URLs.</p>
        <a href="/ShortUrls/Create" class="btn btn-primary btn-lg px-4">Create Short URL</a>
    </div>
    <div class="row justify-content-center mt-5">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <h5 class="card-title mb-3">How it works</h5>
                    <ol class="list-unstyled mb-0">
                        <li><span class="fw-bold">1.</span> Paste your long URL</li>
                        <li><span class="fw-bold">2.</span> Get a short link instantly</li>
                        <li><span class="fw-bold">3.</span> Share and track your link's performance</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</div>
